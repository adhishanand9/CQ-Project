<body>
    <% include partials/menu.html %>
    <div id="community_header_div">
        <button class="btn" id="community_panel"><i class="fa fa-group"></i></button>
        <button class="btn" id="search_community_panel"><i class="fa fa-search"></i></button>
        <input type="text" id="search_input" placeholder="Search Community...">
    </div>
    <div id="body_internal_div">
        <%communtiydata.forEach(d => {%>
        <div class="community_div_class">
            <div class="community_upper_div">
                <div class="community_image_div_class"><img src="/<%=d.image%>" class="community_image_class"></div>
                <div class="community_name_div_class"><a href="/community/communityprofile/<%=d._id%>"><%=d.comname%></a></div>
                <button id="join_button" class="joinbtn">
                        <% if(d.membershiprule == "direct"){ %>
                            Join
                        <% } else{ %>
                            Ask To Join
                        <% } %>
                </button>
            </div>
            <div class="community_lower_div_class">
                <div class="members_div_class"><%=d.communitymembers%> Members</div>
                <div class="description_div_class"><%=d.communitydescription%></div>
            </div>
        </div>
        <%})%>
    </div>
</body>
<script>
    console.log('<%= data[0].role%>');
    var menu = document.getElementById("menu");
    var sideBtn = document.getElementById("sideBtn");
    var body_internal_div = document.getElementById("body_internal_div");
    var span = menu.getElementsByTagName("span");
    var communtiydata = <%-JSON.stringify(communtiydata)%>;

    var div = menu.getElementsByTagName('div');
    for(var i=0;i<div.length;i++){
        div[i].classList.remove("active");
    }
    var create=document.getElementById("createCommunity");
    div[2].classList.add("active");

    var community_header_div = document.getElementById("community_header_div");

    var search_button=document.getElementById("search_community_panel");
    search_button.addEventListener('click',function(event){
      window.location = '/communtiy/communitypanellist'
    });
    var community_panel=document.getElementById("community_panel");
    community_panel.addEventListener('click',function(event){
      window.location = '/communtiy/communitypanel'
    });
    $(document).ready(function(){
      $("#sideBtn").click(function(){
         if($("#menu").width() == 50){
            $("#menu").animate({width: '250px'},300);
            $("#body_internal_div").animate({left:'20%'},300);
            $("#community_header_div").animate({'padding-left':'250px'},300);
         } else{
            $("#menu").animate({width: '50px'},300);
            $("#body_internal_div").animate({left:'18%'},300);
            $("#community_header_div").animate({'padding-left':'100px'},300);
         }
      });
   });
   var join_community=document.getElementById("join_button")
   join_community.addEventListener('click',function(){
       console.log('I am clicked');
       console.log('<%=communtiydata[0].comname%>');
       var updateCommunity = new Object();
       updateCommunity._id='<%=communtiydata[0]._id%>';
       updateCommunity.comname='<%=communtiydata[0].name%>';
       console.log('<%=communtiydata[0].communitymembers%>');
       updateCommunity.members=<%=communtiydata[0].communitymembers%>+1;
       console.log('updateCommunity.members');
       //updetail.email = '<%= data[0].email%>';
       // updetail._id = '<%= data[0]._id%>';
       //updetail.name = document.getElementById('name_input').value;
       //updetail.dob = document.getElementById('dob_input').value;
       //updetail.gender = document.getElementById('select_gender').value;
       //updetail.city = document.getElementById('city_input').value;
       //updetail.phoneno = document.getElementById('phoneno_input').value;
       //updetail.journey = document.getElementById('journey_input').value;
       //updetail.interest = document.getElementById('interest_input').value;
       //updetail.expectation = document.getElementById('expectation_input').value;

       var request = new XMLHttpRequest();
       request.open('PUT','/updateCommunityDetails');
       request.setRequestHeader('Content-Type','application/json');
       request.send(JSON.stringify(updateCommunity));
       request.onload = function(){
           var dataReturned = request.responseText;
           if(dataReturned==""||dataReturned==null){
           alert('Error in Updating Details!!!');
               window.location = '/communtiy/communitypanellist';
           }
           else{
               console.log(dataReturned);
               alert('Data Updated correctly');
               window.location = '/community/communityprofile/<%=communtiydata[0]._id%>';
           }
       }

   });
   var search_input=document.getElementById('search_input');
   search_input.addEventListener('keyup',function(){
        body_internal_div.innerHTML = "";
        var search_param = document.getElementById("search_input").value;
        console.log(search_param);
        communtiydata.forEach(element=>{
            if(element.comname.includes(search_param)){
                console.log(element);
                addToDom(element);
            }
        })
    });

    function addToDom(element){
        var listItem1 = document.createElement('div');
        listItem1.setAttribute("class","community_div_class");
        var listItem = document.createElement("div");
        listItem.setAttribute("class","community_upper_div");
        first_div = document.createElement('div');
        first_div.setAttribute("class","community_image_div_class");
        image = document.createElement('img');
        image.setAttribute("src","/"+element.image);
        image.setAttribute("class","community_image_class");
        first_div.appendChild(image);
        listItem.appendChild(first_div);
        second_div = document.createElement('div');
        second_div.setAttribute("class","community_name_div_class");
        anchor = document.createElement('a');
        anchor.setAttribute("href","/community/communityprofile/" + element._id);
        anchor.setAttribute("id",element.comname);
        anchor.innerHTML = element.comname;
        second_div.appendChild(anchor);
        listItem.appendChild(second_div);
        button = document.createElement('button');
        button.setAttribute("class","joinbtn");
        button.setAttribute("id",element._id);
        if(element.membershiprule == "direct"){
            button.innerHTML = "Join";
         } else{
            button.innerHTML = "Ask To Join";
         }
        listItem.appendChild(button);
        listItem1.appendChild(listItem);
        listItem2 = document.createElement('div');
        listItem2.setAttribute("class","community_lower_div_class");
        thirddiv = document.createElement("div");
        thirddiv.setAttribute("class","members_div_class");
        thirddiv.innerHTML = element.communitymembers+" Members";
        listItem2.appendChild(thirddiv);
        fourdiv = document.createElement('div');
        fourdiv.setAttribute("class","desription_div_class");
        fourdiv.innerHTML = element.communitydescription;
        listItem2.appendChild(fourdiv);
        listItem1.appendChild(listItem2);
         body_internal_div.appendChild(listItem1);
    }
</script>
